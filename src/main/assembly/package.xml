<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>package</id>
  <formats>
    <format>tar.gz</format>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>

  <files>
    <!-- Log4J configuration files -->
    <file>
      <source>src/main/resources/log4j2/log4j2.xml</source>
      <outputDirectory>lib/</outputDirectory>
    </file>

    <file>
      <source>src/main/resources/log4j2/log4j2-debug.xml</source>
      <outputDirectory>lib/</outputDirectory>
    </file>

    <!-- Launcher script -->
    <file>
      <source>src/main/scripts/twinapp</source>
      <outputDirectory>bin</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </file>

    <!-- Install script -->
    <file>
      <source>src/main/scripts/install.sh</source>
      <outputDirectory></outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </file>

    <file>
      <source>src/main/scripts/common.def</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0644</fileMode>
    </file>

    <file>
      <source>parameters.def</source>
      <outputDirectory></outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0644</fileMode>
      <filtered>true</filtered>
    </file>
  </files>

  <fileSets>

    <!-- Systemd units -->
    <fileSet>
      <directory>${project.basedir}/src/main/systemd-units</directory>
      <outputDirectory>systemd-units</outputDirectory>
      <fileMode>0644</fileMode>
      <includes>
        <include>*.service</include>
      </includes>
    </fileSet>

    <!-- Include configuration files -->
    <fileSet>
      <directory>${project.basedir}/src/main/config</directory>
      <outputDirectory>config/</outputDirectory>
      <includes>
         <include>config-jmx-exporter.yaml</include>
       </includes>
    </fileSet>
    
    <!-- Include the JMX exporter Java agent.
         The JAR file is stored as binary in the projet Git repository.
    -->
    <fileSet>
      <directory>${project.basedir}/src/main/lib</directory>
      <outputDirectory>lib/</outputDirectory>
      <includes>
         <include>jmx_prometheus_javaagent*.jar</include>
       </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <!-- Put all dependencies in 'lib' directory -->
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>

</assembly>

