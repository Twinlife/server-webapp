# Version of installation package
PACKAGE_VERSION=${project.version}

# Name of the package
PACKAGE_NAME=twinapp

SERVICE_NAME=twinapp

# User running the service
SERVICE_USER=twinapp
SERVICE_GROUP=twinapp

# Installation directory prefix
PREFIX=/opt

PACKAGE_VERSION_NAME=${PACKAGE_NAME}-${PACKAGE_VERSION}
PACKAGE_PATH=${SCRIPT_PATH}/package/${PACKAGE_VERSION_NAME}

ARCHIVE_NAME="${PACKAGE_VERSION_NAME}.tgz"

SERVICE_HOME=${PREFIX}/${PACKAGE_VERSION_NAME}
SERVICE_CONF=/etc/${SERVICE_NAME}
SERVICE_LOGS=/var/log/${SERVICE_NAME}
